{
    "name": "MosaicJSON",
    "type": "object",
    "properties": {
        "mosaicjson": {
            "type": "string",
            "pattern": "\\d+\\.\\d+\\.\\d+\\w?[\\w\\d]*"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "pattern": "\\d+\\.\\d+\\.\\d+\\w?[\\w\\d]*"
        },
        "attribution": {
            "type": "string"
        },
        "minzoom": {
            "minimum": 0,
            "maximum": 30,
            "type": "integer"
        },
        "maxzoom": {
            "minimum": 0,
            "maximum": 30,
            "type": "integer"
        },
        "quadkey_zoom": {
            "minimum": 0,
            "maximum": 30,
            "type": "integer"
        },
        "bounds": {
            "type": "array",
            "items": {
                "type": "number"
            }
        },
        "center": {
            "type": "array",
            "items": {
                "type": "number"
            }
        },
        "tiles": {
            "type": "object",
            "patternProperties": {
                "[0-9]+": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "asset_type": {
            "type": "string"
        },
        "data_type": {
            "type": "string"
        },
        "indexes": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "oneOf": [
                    {"type": "number"},
                    {"type": "str"}
                ]
            }
        },
        "band_descriptions": {
            "type": "array",
            "items": {
                "type": "array",
                "items": [
                    {
                        "oneOf": [
                            {"type": "number"},
                            {"type": "str"}
                        ]
                    },
                    {
                        "type": "str"
                    }
                ]
            }
        },
        "colormap": {
            "type": "object",
            "patternProperties": {
                "^[0-9_]+$": {
                    "type": "array",
                    "items": {"type": "number"},
                    "minItems": 4,
                    "maxItems": 4
                }
            }
        }
    },
    "required": ["mosaicjson", "tiles", "minzoom", "maxzoom", "bounds"]
}
